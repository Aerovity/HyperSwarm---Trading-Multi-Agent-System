# Django Configuration
SECRET_KEY=your-secret-key-change-in-production
DEBUG=True

# Data persistence directory
DATA_DIR=./data

# Hyperliquid Configuration
HYPERLIQUID_API_URL=https://api.hyperliquid-testnet.xyz

# Anthropic/Claude Configuration (required for production trade approval)
ANTHROPIC_API_KEY=your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-sonnet-4-20250514

# Demo Mode (set to false for production with real API calls)
# In demo mode, LLM calls are skipped and mock responses are returned
DEMO_MODE=true

# Redis Configuration
# Guardian Agent uses DB 2 (Scout=0, Onboarder=1)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=2

# Cache TTLs (seconds)
PORTFOLIO_CACHE_TTL=60
RISK_METRICS_CACHE_TTL=30

# Rolling Window Sizes
APPROVAL_WINDOW_SIZE=100
ALERT_WINDOW_SIZE=200
LOG_WINDOW_SIZE=100

# Risk Limits Configuration
MAX_POSITIONS=3
MAX_LEVERAGE=3.0
MAX_POSITION_PCT=0.30
MIN_LIQUIDATION_DISTANCE=0.20
MIN_SIGNAL_CONFIDENCE=0.7

# RL Policy Configuration
# Set to true to use trained RL policy for trade approval
USE_RL_POLICY=false
# Path to trained model (without .zip extension)
RL_MODEL_PATH=./data/models/guardian_ppo_latest
# Use deterministic policy (recommended for production)
RL_DETERMINISTIC=true
# Fall back to rule-based rejection if rules are violated
RL_FALLBACK_TO_RULES=true

# Logging
LOG_LEVEL=INFO
